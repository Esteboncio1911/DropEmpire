    <script>
        // Animaci√≥n de n√∫meros en las estad√≠sticas
        function animateValue(id, start, end, duration, suffix = '') {
            const element = document.getElementById(id);
            const range = end - start;
            const increment = range / (duration / 16);
            let current = start;
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= end) {
                    element.textContent = end + suffix;
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current).toLocaleString() + suffix;
                }
            }, 16);
        }

        // Simular nuevos drops en vivo
        const nombres = ['Carlos', 'Sofia', 'Juan', 'Maria', 'Pedro', 'Laura', 'Diego', 'Elena'];
        const cajas = ['Caja Elite', 'Caja Legendaria', 'Caja Imperial', 'Caja Estelar'];
        
        setInterval(() => {
            const container = document.getElementById('drops-container');
            const nombre = nombres[Math.floor(Math.random() * nombres.length)];
            const caja = cajas[Math.floor(Math.random() * cajas.length)];
            const premio = (Math.random() * 3000 + 100).toFixed(2);
            const inicial = nombre.charAt(0);
            
            const newDrop = document.createElement('div');
            newDrop.className = 'drop-item';
            newDrop.innerHTML = `
                <div class="drop-user">
                    <div class="drop-avatar">${inicial}</div>
                    <div>
                        <div style="font-weight: bold;">${nombre}_${Math.floor(Math.random() * 999)}</div>
                        <div style="color: #8b8ba7; font-size: 0.9rem;">${caja}</div>
                    </div>
                </div>
                <div class="drop-prize">$${premio}</div>
            `;
            
            container.insertBefore(newDrop, container.firstChild);
            
            if (container.children.length > 5) {
                container.removeChild(container.lastChild);
            }
        }, 4000);

        // Scroll suave
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
